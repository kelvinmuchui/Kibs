<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/policyName"
        android:text="Policy Name"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy terms"
            android:layout_below="@id/policyName"
            android:layout_marginTop="10dp"
            android:id="@+id/policyterms"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maturity"
            android:layout_below="@id/policyterms"
            android:text="Maturity"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/policyterms"
            android:layout_alignParentRight="true"
            android:text="Amount"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:id="@+id/policysum"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>